{
    "manifest_version": 2,

    "name": "Gerrit Reviews",
    "description": "Hello Chrome (from Gerrit).",
    "version": "0.3",

    "permissions": [
        "alarms",
        "storage",
        "tabs",
        "webNavigation",
        "webRequest",
        "http://*/*", "https://*/*"
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": [
            "background.js",
            "gerrit-api.js"
        ],
        "persistent": true
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}
